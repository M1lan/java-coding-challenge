# .editorconfig

# This file is intended to mirror formatting rules applied by Spotless
# (e.g. with google-java-format) See:
# https://github.com/diffplug/spotless

# Top-most EditorConfig file
root = true

# Generic settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Settings for Java source files
[*.java]
# Google Java Format uses 2-space indents and a 100-character line length
indent_style = space
indent_size = 2
max_line_length = 100

# Settings for Gradle build files (if used)
[*.gradle]
indent_style = space
indent_size = 4

# Optional: Markdown files (disable trimming trailing whitespace)
[*.md]
trim_trailing_whitespace = false
